{
  "extends": "airbnb/legacy",
  "env": {
    "mocha": true
  },
  "rules": {
    "vars-on-top": 0,
    "comma-dangle": [2, "always-multiline"],
    "max-len": 0,
    "func-names": 0,
    "one-var": [2, { "uninitialized": "always", "initialized": "never" }],
    "no-param-reassign": [0],
    "no-use-before-define": [2, "nofunc"],
    "space-before-function-paren": 0
  }
}
